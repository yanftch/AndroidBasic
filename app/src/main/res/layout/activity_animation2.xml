<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.yanftch.basic.animation.Animation2Activity">

    <Button
        android:id="@+id/btnVAnim1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ValueAnimator"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnVAnim2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ObjectAnimator"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@id/btnVAnim1"/>

    <TextView
        android:id="@+id/textViewShowInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1234567890"
        android:textSize="@dimen/value_20_dp"
        app:layout_constraintTop_toBottomOf="@id/btnVAnim1"/>

    <ImageView
        android:id="@+id/imageTestAninm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_test_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>
